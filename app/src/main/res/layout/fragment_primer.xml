<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <!-- Padding uniforme de 16dp para separar del borde -->

    <!-- EditText para el TÍTULO del libro -->
    <EditText
        android:id="@+id/edTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Título"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- EditText para el AÑO DE PUBLICACIÓN -->
    <EditText
        android:id="@+id/edPublicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Año de publicación"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/edTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- EditText para el NÚMERO DE PÁGINAS -->
    <EditText
        android:id="@+id/edPaginas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="N° de páginas"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/edPublicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Botón para navegar al segundo fragment -->
    <Button
        android:id="@+id/botonSegundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segunda Pantalla"
        app:layout_constraintTop_toBottomOf="@+id/edPaginas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>